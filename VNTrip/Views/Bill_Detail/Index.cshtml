@model IEnumerable<VNTrip.Models.Bill_Detail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Quản Lý Chi Tiết Đơn Hàng</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Email
        </th>
        <th>
            Loại Phòng KS
        </th>
        <th>
            Loại Phòng NN
        </th>
        <th>
            Vé Máy Bay
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.created_at)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.updated_at)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bill.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiPhongK.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiPhongNN.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VeMayBay.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updated_at)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Hiển Thị Thông Tin", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
