@model IEnumerable<VNTrip.Models.Cart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h2>Quản Lý Giỏ Hàng</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiPhongK.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiPhongNN.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VeMayBay.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity_Purchased)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.created_at)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.updated_at)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiPhongK.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiPhongNN.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VeMayBay.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity_Purchased)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updated_at)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Hiển Thị Thông Tin", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
