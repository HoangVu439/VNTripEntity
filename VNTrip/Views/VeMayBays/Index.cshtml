@model IEnumerable<VNTrip.Models.VeMayBay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h2>Quản Lý Vé Máy Bay</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Khuvuc.Name)
        </th>
        <th>
            Tên vé
        </th>
        <th>
            Xếp Hạng
        </th>
        <th>
            Tên Hãng
        </th>
        <th>
            Điểm Đi
        </th>
        <th>
            Điểm Đến
        </th>
        <th>
           Ngày Đi
        </th>
        <th>
            Ngày Về
        </th>
        <th>
            Giá
        </th>
        <th>
             Hình Ảnh
        </th>
        <th>
            Mô Tả
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Khuvuc.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group_Pro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenhang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diemdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diemden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaydi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngayve)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Hiển Thị Thông Tin", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
