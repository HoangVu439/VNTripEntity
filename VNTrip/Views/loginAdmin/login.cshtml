    <link rel="stylesheet" href="~/fonts/css/font.css" type="text/css" />
    <link href="~/fonts/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <script src="~/fonts/js/jquery2.0.3.min.js"></script>
    <script>
        isBool = true;
        function showpass() {
            if (isBool) {
                document.getElementById("password").setAttribute("type", "text");
                isBool = false;
            }
            else {
                document.getElementById("password").setAttribute("type", "password");
                isBool = true;
            }
        }

    </script>
</head>
<body>
    <div class="log-w3">
        <div class="w3layouts-main">
            <h2>Đăng Nhập Ngay</h2>
            <form action="/loginAdmin/Index" method="post">
                <input type="email" class="ggg" name="Email" placeholder="E-MAIL" required="">
                <input type="password" class="ggg" name="Password" placeholder="PASSWORD" required="">
                <label>
                    <input type="checkbox" id="cb" value="remember-me">
                    Remember me
                </label>
                <p style="color:red">@ViewBag.error</p>
                <div class="clearfix"></div>
                <input type="submit" value="Sign In" name="login">
            </form>
        </div>
    </div>
    <script src="~/fonts/js/bootstrap.js"></script>
    <script src="~/fonts/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/fonts/js/scripts.js"></script>
    <script src="~/fonts/js/jquery.slimscroll.js"></script>
    <script src="~/fonts/js/jquery.nicescroll.js"></script>
    <script language="javascript" type="text/javascript" src="~/fonts/js/flot-chart/excanvas.min.js"></script>
    <script src="~/fonts/js/jquery.scrollTo.js"></script>
</body>

